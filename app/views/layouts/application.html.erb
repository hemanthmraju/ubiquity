<!--[if gt IE 9]><!--><html lang="<%= I18n.locale %>"><!--<![endif]-->
  <head data-hook="inside_head">
    <%= render :partial => 'shared/head' %>
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.6.4/leaflet.css" />
  </head>
  <body>
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="../" class="navbar-brand">Caputt</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            
            <li>
              <a href="/about">About</a>
            </li>
            <li>
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">Download App</a>
            </li>
            <li>
              <a href="">Feedback</a>
            </li>
            
          </ul>

          <ul class="nav navbar-nav navbar-right">

            <% if current_user %>
              <li><%= link_to t(:signout), destroy_user_session_path, method: :delete %></li>
              <li><%= link_to "Find Friends", '#users_path' %></li>
              <%#= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
            <% else %>
              <li><a href="/users/sign_in" >Sign-in</a></li>
              <li><a href="/users/sign_up" >Sign-up</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="page-header" id="banner">
        <div class="row">
          <div class="col-lg-6" style="margin:2%">
            <img src="/logo.png">
           
          </div>
        </div>
      </div>
      <div class="row">
        <%= flash_messages %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
